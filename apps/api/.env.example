# Panel API Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# REQUIRED - Database
# ===========================================
# Local dev: port 5432 (via docker-compose.dev.yml)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/panel

# ===========================================
# REQUIRED - Redis
# ===========================================
# Local dev: port 6379 (via docker-compose.dev.yml)
REDIS_URL=redis://localhost:6379

# ===========================================
# REQUIRED - Security (MUST CHANGE!)
# ===========================================
# JWT_SECRET must be at least 32 characters
# Generate with: openssl rand -hex 32
JWT_SECRET=

# JWT token expiration (default: 7d)
JWT_EXPIRES_IN=7d

# ===========================================
# OPTIONAL - API Configuration
# ===========================================
API_PORT=3000
API_PREFIX=api/v1
NODE_ENV=development
LOG_LEVEL=info

# ===========================================
# OPTIONAL - CORS
# ===========================================
# Comma-separated list of allowed origins, or * for all
CORS_ORIGIN=http://localhost:5173

# ===========================================
# OPTIONAL - Subscription Security
# ===========================================
# Set to true to require signed subscription URLs
SUBSCRIPTION_REQUIRE_SIGNATURE=false

# ===========================================
# INITIAL ADMIN SETUP (for prisma db seed)
# ===========================================
# System Admin (super admin with full access)
# REQUIRED in production, auto-generated in development
SYSADMIN_USERNAME=sysadmin
SYSADMIN_PASSWORD=
SYSADMIN_EMAIL=sysadmin@example.com

# Tenant Admin (default tenant administrator)
# REQUIRED in production, auto-generated in development
ADMIN_USERNAME=admin
ADMIN_PASSWORD=
ADMIN_EMAIL=admin@example.com
